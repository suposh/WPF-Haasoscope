<Window
    x:Class="SdxScope.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SdxScope"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
    Title="SDX Scope"
    Width="800"
    Height="550"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="grid">
                            <Border
                                x:Name="border"
                                Background="LightGray"
                                BorderBrush="DarkGray"
                                BorderThickness="2"
                                CornerRadius="3">
                                <ContentPresenter
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    TextElement.FontSize="14"
                                    TextElement.FontWeight="Medium" />
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#BEE6FD" />
                                <Setter TargetName="border" Property="BorderBrush" Value="#3C7FB1" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2C628B" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="grid" Property="Opacity" Value="0.25" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>
        <Style x:Key="ToggleSwitchStyle" TargetType="CheckBox">
            <Setter Property="Focusable" Value="False" />
            <Setter Property="Width" Value="50" />
            <Setter Property="Height" Value="25" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <ContentPresenter
                                Margin="60,0,5,0"
                                VerticalAlignment="Center"
                                RecognizesAccessKey="True" />
                            <!--  Track  -->
                            <Border
                                x:Name="SwitchBackground"
                                Width="50"
                                Height="25"
                                Padding="0"
                                HorizontalAlignment="Left"
                                Background="DarkGray"
                                CornerRadius="12" />

                            <!--  Thumb  -->
                            <Ellipse
                                x:Name="SwitchThumb"
                                Width="20"
                                Height="20"
                                Margin="2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Fill="GhostWhite">
                                <Ellipse.RenderTransform>
                                    <TranslateTransform x:Name="SwitchThumbTransform" X="0" />
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </Grid>

                        <!--  Triggers  -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="SwitchThumbTransform"
                                                Storyboard.TargetProperty="X"
                                                To="24"
                                                Duration="0:0:0.1" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="SwitchThumbTransform"
                                                Storyboard.TargetProperty="X"
                                                To="0"
                                                Duration="0:0:0.1" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                                <Setter TargetName="SwitchBackground" Property="Background" Value="MediumSeaGreen" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Background="LightBlue">
            <MenuItem
                Height="25"
                Margin="2"
                Header="File" />
            <MenuItem
                Height="25"
                Margin="2"
                Header="Board Configuration" />
            <MenuItem
                Height="25"
                Margin="2"
                Header="Window" />
            <MenuItem
                Height="25"
                Margin="2"
                Header="About" />
        </Menu>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>
            <oxy:PlotView
                Grid.Column="0"
                Margin="10"
                Background="Transparent"
                Model="{Binding Model}" />
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="80" />
                    <RowDefinition Height="190" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="80" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    Height="30"
                    Margin="0,5,0,5"
                    Orientation="Horizontal">
                    <TextBlock
                        Width="50"
                        Margin="5"
                        HorizontalAlignment="Right"
                        FontWeight="Medium"
                        Text="Setup" />
                    <Button
                        Width="80"
                        Margin="0,0,5,0"
                        HorizontalAlignment="Right"
                        Command="{Binding ConnectBoardCommand}"
                        Content="Connect"
                        Style="{StaticResource AccentButtonStyle}" />
                    <Button
                        Width="100"
                        Margin="5,0,5,0"
                        HorizontalAlignment="Center"
                        Command="{Binding DisconnectBoardCommand}"
                        Content="Disconnect"
                        Style="{StaticResource AccentButtonStyle}" />
                    <Button
                        Width="90"
                        Margin="5,0,5,0"
                        HorizontalAlignment="Left"
                        Command="{Binding StartDataLoop}"
                        Content="Start Loop"
                        Style="{StaticResource AccentButtonStyle}" />
                </StackPanel>
                <StackPanel
                    Grid.Row="1"
                    Margin="0,5,0,5"
                    Orientation="Horizontal">
                    <TextBlock
                        Width="100"
                        Margin="5"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="Time Base" />
                    <Button
                        Width="80"
                        Margin="20,0,0,0"
                        HorizontalAlignment="Right"
                        Command="{Binding DownsampleIncrease}"
                        Content="Increase"
                        Style="{StaticResource AccentButtonStyle}" />
                    <Button
                        Width="80"
                        Margin="20,0,20,0"
                        HorizontalAlignment="Right"
                        Command="{Binding DownsampleDecrease}"
                        Content="Decrease"
                        Style="{StaticResource AccentButtonStyle}" />
                </StackPanel>
                <StackPanel
                    Grid.Row="2"
                    Margin="0,5,0,5"
                    Orientation="Horizontal">
                    <TextBlock
                        Width="100"
                        Height="20"
                        Margin="5"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="Voltage Controls" />
                    <Button
                        Width="80"
                        Margin="20,0,0,0"
                        HorizontalAlignment="Right"
                        Command="{Binding DataScaleIncrease}"
                        Content="Increase"
                        Style="{StaticResource AccentButtonStyle}" />
                    <Button
                        Width="80"
                        Margin="20,0,0,0"
                        HorizontalAlignment="Right"
                        Command="{Binding DataScaleDecrease}"
                        Content="Decrease"
                        Style="{StaticResource AccentButtonStyle}" />
                </StackPanel>
                <GroupBox
                    Grid.Row="3"
                    Margin="0,5,0,5"
                    Header="Trigger Menu">
                    <StackPanel Margin="0,0,0,0" Orientation="Vertical">
                        <StackPanel Margin="0,0,0,0" Orientation="Horizontal">

                            <CheckBox
                                Width="140"
                                Height="30"
                                Margin="10,0,10,0"
                                VerticalAlignment="Center"
                                Command="{Binding ChannelTrigger}"
                                Content="Trigger Value"
                                Style="{StaticResource ToggleSwitchStyle}" />

                            <Slider
                                Width="120"
                                Height="30"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                IsEnabled="{Binding}"
                                Maximum="255"
                                Minimum="0"
                                Orientation="Horizontal"
                                Value="{Binding BoardHandle.TriggerThreshold, Mode=TwoWay}" />
                            <TextBlock
                                Width="50"
                                Margin="0,0,0,0"
                                VerticalAlignment="Center"
                                Text="{Binding BoardHandle.TriggerThreshold, Mode=OneWay}" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <StackPanel Grid.Row="4">
                    <TextBlock
                        Height="20"
                        Margin="5"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="Toggle Options" />

                    <CheckBox
                        Width="160"
                        Height="30"
                        Margin="15,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalContentAlignment="Center"
                        Content="Auto Trigger"
                        Style="{StaticResource ToggleSwitchStyle}" />
                    <CheckBox
                        Width="160"
                        Height="30"
                        Margin="15,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalContentAlignment="Center"
                        Content="Gain"
                        Style="{StaticResource ToggleSwitchStyle}" />
                    <CheckBox
                        Width="160"
                        Height="30"
                        Margin="15,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalContentAlignment="Center"
                        Content="DAC Output"
                        Style="{StaticResource ToggleSwitchStyle}" />
                    <TextBlock
                        Margin="5"
                        HorizontalAlignment="Left"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="Coupling" />
                    <CheckBox
                        Width="180"
                        Height="30"
                        Margin="15,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalContentAlignment="Center"
                        Content="Coupling DC/AC"
                        Style="{StaticResource ToggleSwitchStyle}" />
                </StackPanel>
                <StackPanel Grid.Row="5" />
                <StackPanel
                    Grid.Row="6"
                    Margin="0,0,0,30"
                    VerticalAlignment="Bottom">
                    <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal">
                        <TextBlock
                            Height="25"
                            Margin="0,0,0,5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="Medium">
                            Firmware Version
                        </TextBlock>
                        <TextBlock
                            Name="VersionLabel"
                            Height="25"
                            Margin="5,0,5,5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="Medium"
                            Text="{Binding BoardHandle.BoardFirmware, Mode=OneWay}" />
                    </StackPanel>
                    <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal">
                        <TextBlock
                            Height="20"
                            Margin="0,0,0,5"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="Medium"
                            Text="Device  " />
                        <ComboBox
                            Width="120"
                            Height="20"
                            MinWidth="70"
                            Margin="0,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="8"
                            FontWeight="Medium"
                            ItemsSource="{Binding AvailableCOMDevices, Mode=OneWay}"
                            SelectedIndex="{Binding SelectedCOMDevice, Mode=TwoWay}" />
                        <Button
                            Width="70"
                            Height="20"
                            Margin="0,0,0,0"
                            VerticalAlignment="Center"
                            Command="{Binding UpdateSelectedCOMPort}"
                            Content="Refresh"
                            FontSize="14"
                            Style="{StaticResource AccentButtonStyle}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>

        <TextBlock
            Grid.Row="2"
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="5,5,5,5"
            Text="Status" />
    </Grid>
</Window>
