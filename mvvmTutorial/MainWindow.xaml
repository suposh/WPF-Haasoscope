<Window
    x:Class="SdxScope.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SdxScope"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
    Title="SDX Scope"
    Width="800"
    Height="550"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="grid">
                            <Border
                                x:Name="border"
                                Background="LightGray"
                                BorderBrush="DarkGray"
                                BorderThickness="2"
                                CornerRadius="3">
                                <ContentPresenter
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    TextElement.FontFamily="Bahnschrift"
                                    TextElement.FontSize="14"
                                    TextElement.FontWeight="Medium" />
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#BEE6FD" />
                                <Setter TargetName="border" Property="BorderBrush" Value="#3C7FB1" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2C628B" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="grid" Property="Opacity" Value="0.25" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
            <RowDefinition Height="15" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="File" />
            <MenuItem Header="Board Configuration" />
            <MenuItem Header="Window" />
            <MenuItem Header="About" />
        </Menu>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>
            <oxy:PlotView
                Grid.Column="0"
                Margin="10"
                Background="Transparent"
                Model="{Binding Model}" />
            <StackPanel Grid.Column="1" Orientation="Vertical">
                <TabControl Height="20">
                    <TabItem Header="Channel 1" />
                    <TabItem Header="Channel 2" />
                    <TabItem Header="Channel 3" />
                    <TabItem Header="Channel 4" />
                </TabControl>
                <StackPanel Orientation="Vertical">
                    <StackPanel
                        VerticalAlignment="Bottom"
                        Background="PaleTurquoise"
                        Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Bottom"
                            FontSize="14"
                            FontWeight="Medium">
                            Firmware Version :
                        </TextBlock>
                        <TextBlock
                            Name="VersionLabel"
                            Margin="5,0,5,0"
                            VerticalAlignment="Bottom"
                            FontSize="14"
                            FontWeight="Medium"
                            Text="{Binding BoardHandle.BoardFirmware, Mode=OneWay}" />
                    </StackPanel>
                    <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Bottom"
                            FontSize="14"
                            FontWeight="Medium">
                            Select Device :
                        </TextBlock>
                        <ComboBox
                            Width="80"
                            MinWidth="70"
                            Margin="5,0,5,0"
                            VerticalAlignment="Center"
                            FontSize="10"
                            FontWeight="Medium"
                            ItemsSource="{Binding AvailableCOMDevices, Mode=OneWay}"
                            SelectedValue="{Binding SelectedCOMDevice, Mode=OneWayToSource}" />
                        <TextBlock
                            Width="50"
                            VerticalAlignment="Bottom"
                            Background="Beige"
                            FontSize="14"
                            FontWeight="Medium"
                            Text="{Binding SelectedCOMDevice, Mode=OneWay}" />
                        <Button
                            Width="50"
                            Margin="5,0,5,0"
                            Command="{Binding UpdateSelectedCOMPort}"
                            Content="Refresh" />
                    </StackPanel>
                    <StackPanel
                        Height="30"
                        Margin="0,10,0,5"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            Width="80"
                            Margin="0,0,5,0"
                            HorizontalAlignment="Left"
                            Command="{Binding ConnectBoardCommand}"
                            Content="Connect"
                            FontFamily="Cascadia Code"
                            FontSize="12"
                            FontWeight="Bold"
                            Style="{StaticResource RoundedButtonStyle}" />
                        <Button
                            Width="110"
                            Margin="5,0,5,0"
                            HorizontalAlignment="Right"
                            Command="{Binding GetBoardFirmware}"
                            Content="Get Firmware"
                            FontFamily="Cascadia Code"
                            FontSize="12"
                            FontWeight="Bold"
                            Style="{StaticResource RoundedButtonStyle}" />
                        <Button
                            Width="90"
                            Margin="5,0,0,0"
                            HorizontalAlignment="Right"
                            Command="{Binding DisconnectBoardCommand}"
                            Content="Disconnect"
                            FontFamily="Cascadia Code"
                            FontSize="12"
                            FontWeight="Bold"
                            Style="{StaticResource RoundedButtonStyle}" />
                    </StackPanel>
                    <Separator />
                    <StackPanel Margin="0,5,0,5" Orientation="Horizontal">
                        <TextBlock
                            Width="100"
                            Margin="5"
                            FontSize="14"
                            FontWeight="Medium"
                            Text="Time Base" />
                        <Button
                            Width="80"
                            Margin="20,0,0,0"
                            HorizontalAlignment="Right"
                            Command="{Binding DownsampleIncrease}"
                            Content="Increase"
                            Style="{StaticResource RoundedButtonStyle}" />
                        <Button
                            Width="80"
                            Margin="20,0,20,0"
                            HorizontalAlignment="Right"
                            Command="{Binding DownsampleDecrease}"
                            Content="Decrease"
                            Style="{StaticResource RoundedButtonStyle}" />
                    </StackPanel>
                    <Separator />
                    <StackPanel Margin="0,5,0,5" Orientation="Horizontal">
                        <TextBlock
                            Width="100"
                            Height="20"
                            Margin="5"
                            FontSize="14"
                            FontWeight="Medium"
                            Text="Voltage Controls" />
                        <Button
                            Width="80"
                            Margin="20,0,0,0"
                            HorizontalAlignment="Right"
                            Command="{Binding DataScaleIncrease}"
                            Content="Increase"
                            Style="{StaticResource RoundedButtonStyle}" />
                        <Button
                            Width="80"
                            Margin="20,0,0,0"
                            HorizontalAlignment="Right"
                            Command="{Binding DataScaleDecrease}"
                            Content="Decrease"
                            Style="{StaticResource RoundedButtonStyle}" />
                    </StackPanel>
                    <Separator />
                    <GroupBox Margin="0,5,0,5" Header="Trigger Menu">
                        <StackPanel Margin="0,0,0,0" Orientation="Vertical">
                            <StackPanel Margin="0,0,0,0" Orientation="Horizontal">

                                <CheckBox
                                    Margin="0,10,0,5"
                                    HorizontalAlignment="Left"
                                    Command="{Binding ChannelTrigger}"
                                    FontSize="14"
                                    FontWeight="Medium">
                                    <CheckBox.Content>
                                        <TextBlock
                                            Margin="0,-2,0,0"
                                            VerticalAlignment="Top"
                                            Text="Trigger Position" />
                                    </CheckBox.Content>
                                </CheckBox>
                                <Slider
                                    Width="120"
                                    Margin="20,8,0,0"
                                    IsEnabled="{Binding}"
                                    Maximum="255"
                                    Minimum="0"
                                    Orientation="Horizontal"
                                    Value="{Binding BoardHandle.TriggerThreshold, Mode=TwoWay}" />
                                <TextBlock
                                    Width="50"
                                    Height="20"
                                    Margin="5"
                                    Background="Beige"
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Text="{Binding BoardHandle.TriggerThreshold, Mode=OneWay}" />
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <Separator />
                    <TextBlock
                        Height="20"
                        Margin="5"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="Toggle Options" />

                    <CheckBox
                        Margin="15,2,0,2"
                        HorizontalAlignment="Left"
                        Content="Auto Trigger" />
                    <CheckBox
                        Margin="15,2,0,2"
                        HorizontalAlignment="Left"
                        Content="Gain" />
                    <CheckBox
                        Margin="15,2,0,2"
                        HorizontalAlignment="Left"
                        Content="DAC Output" />
                    <TextBlock
                        Margin="5"
                        HorizontalAlignment="Left"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="Coupling" />
                    <RadioButton
                        Margin="15,0,0,0"
                        HorizontalAlignment="Left"
                        Content="AC Coupling"
                        GroupName="LanguageGroup" />
                    <RadioButton
                        Margin="15,0,0,0"
                        HorizontalAlignment="Left"
                        Content="DC Coupling"
                        GroupName="LanguageGroup" />
                    <Button
                        Width="100"
                        Height="25"
                        Margin="10"
                        HorizontalAlignment="Left"
                        Command="{Binding StartDataLoop}"
                        Content="Start Loop"
                        Style="{StaticResource RoundedButtonStyle}" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <TextBlock
            Grid.Row="2"
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="5,0,0,0"
            Text="Status" />
    </Grid>
</Window>
