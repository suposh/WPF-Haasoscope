<Window
    x:Class="SdxScope.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:SdxScope.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SdxScope"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
    Title="SDX Scope"
    Width="1030"
    Height="720"
    d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel}"
    ThemeMode="Light"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="grid">
                            <Border
                                x:Name="border"
                                Background="LightGray"
                                BorderBrush="DarkGray"
                                BorderThickness="2"
                                CornerRadius="3">
                                <ContentPresenter
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    TextElement.FontSize="14"
                                    TextElement.FontWeight="Medium" />
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#BEE6FD" />
                                <Setter TargetName="border" Property="BorderBrush" Value="#3C7FB1" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2C628B" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="grid" Property="Opacity" Value="0.25" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>
        <Style x:Key="ToggleSwitchStyle" TargetType="CheckBox">
            <Setter Property="Focusable" Value="False" />
            <Setter Property="Width" Value="50" />
            <Setter Property="Height" Value="25" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>

                            <!--  Track  -->
                            <Border
                                x:Name="SwitchBackground"
                                Width="50"
                                Height="25"
                                Padding="0"
                                HorizontalAlignment="Left"
                                Background="DarkGray"
                                CornerRadius="12" />

                            <!--  Thumb  -->
                            <Ellipse
                                x:Name="SwitchThumb"
                                Width="20"
                                Height="20"
                                Margin="2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Fill="GhostWhite">
                                <Ellipse.RenderTransform>
                                    <TranslateTransform x:Name="SwitchThumbTransform" X="0" />
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </Grid>

                        <!--  Triggers  -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="SwitchThumbTransform"
                                                Storyboard.TargetProperty="X"
                                                To="24"
                                                Duration="0:0:0.1" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="SwitchThumbTransform"
                                                Storyboard.TargetProperty="X"
                                                To="0"
                                                Duration="0:0:0.1" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                                <Setter TargetName="SwitchBackground" Property="Background" Value="MediumSeaGreen" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="MenuItemStyle" TargetType="MenuItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Padding" Value="5,2" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}">
                            <Grid>
                                <ContentPresenter
                                    Margin="4"
                                    VerticalAlignment="Center"
                                    ContentSource="Header" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="DodgerBlue" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" FontSize="16">
            <MenuItem
                Margin="0,0,0,0"
                Padding="0,-10,0,-10"
                Header="File">
                <MenuItem Padding="-5,-5,-5,-5" Header="Open" />
            </MenuItem>
            <MenuItem
                Margin="0,0,0,0"
                Padding="-15,-10,-15,-10"
                Header="Device Configuration">
                <MenuItem Padding="-5,-5,-5,-5" Header="Edit Config" />
                <MenuItem Padding="-5,-5,-5,-5" Header="Edit Config" />
            </MenuItem>
            <MenuItem
                Margin="0,0,0,0"
                Padding="0,-10,0,-10"
                Header="Window">
                <MenuItem Padding="-5,-5,-5,-5" Header="Grid Settings" />
                <MenuItem Padding="-5,-5,-5,-5" Header="Themes" />
            </MenuItem>
            <MenuItem
                Margin="0,0,0,0"
                Padding="0,-10,0,-10"
                Header="About">
                <MenuItem Padding="-5,-5,-5,-5" Header="This Project?" />
                <MenuItem Padding="-5,-5,-5,-5" Header="Version Info" />
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*" />
                <ColumnDefinition
                    Width="4*"
                    MinWidth="400"
                    MaxWidth="450" />
            </Grid.ColumnDefinitions>
            <Controls:OscilloscopeGrid
                Grid.Column="0"
                Margin="38,15,16,34"
                Panel.ZIndex="0" />
            <oxy:PlotView
                Grid.Column="0"
                Margin="0,0,0,0"
                Panel.ZIndex="1"
                Background="Transparent"
                Model="{Binding Model}" />
            <Grid Grid.Column="1" Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="120" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="150" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="120" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="160" />
                </Grid.RowDefinitions>
                <TabControl Grid.Row="0">
                    <TabItem Width="100" Header="Channel A" />
                    <TabItem Width="100" Header="Channel B" />
                    <TabItem Width="100" Header="Channel C" />
                    <TabItem Width="100" Header="Channel D" />
                </TabControl>
                <Grid Grid.Row="2" Margin="0,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".3*" />
                        <ColumnDefinition Width=".3*" />
                        <ColumnDefinition Width=".3*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Height="20"
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontWeight="Medium"
                        Text="Resolution Controls" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontWeight="Medium"
                        Text="Horizontal" />
                    <Button
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="10,0,10,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Command="{Binding DownsampleIncrease}"
                        Content="Increase"
                        Style="{StaticResource AccentButtonStyle}" />
                    <Button
                        Grid.Row="1"
                        Grid.Column="2"
                        Margin="10,0,10,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Command="{Binding DownsampleDecrease}"
                        Content="Decrease"
                        Style="{StaticResource AccentButtonStyle}" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Height="20"
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontWeight="Medium"
                        Text="Vertical" />
                    <Button
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="10,0,10,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Command="{Binding DataScaleIncrease}"
                        Content="Increase"
                        Style="{StaticResource AccentButtonStyle}" />
                    <Button
                        Grid.Row="2"
                        Grid.Column="2"
                        Margin="10,0,10,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Command="{Binding DataScaleDecrease}"
                        Content="Decrease"
                        Style="{StaticResource AccentButtonStyle}" />
                </Grid>
                <Separator
                    Grid.Row="3"
                    Height="1"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Stretch"
                    BorderBrush="Gray" />
                <Grid Grid.Row="4" Margin="0,0,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".6*" />
                        <ColumnDefinition Width=".25*" />
                        <ColumnDefinition Width=".6*" />
                        <ColumnDefinition Width=".25*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontWeight="Medium"
                        Text="Toggle Options" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="Auto Trigger" />
                    <CheckBox
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalContentAlignment="Bottom"
                        Style="{StaticResource ToggleSwitchStyle}" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="Gain 1X || 10X" />
                    <CheckBox
                        Grid.Row="2"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        Style="{StaticResource ToggleSwitchStyle}" />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="HIRes Mode" />
                    <CheckBox
                        Grid.Row="3"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        IsChecked="{Binding BoardHandle.HiResEnabled, Mode=TwoWay}"
                        Style="{StaticResource ToggleSwitchStyle}" />
                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="Coupling DC || AC" />
                    <CheckBox
                        Grid.Row="4"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Style="{StaticResource ToggleSwitchStyle}" />
                </Grid>
                <Separator
                    Grid.Row="5"
                    Height="1"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Stretch"
                    BorderBrush="Gray" />
                <Grid Grid.Row="6" Margin="0,0,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".6*" />
                        <ColumnDefinition Width=".25*" />
                        <ColumnDefinition Width=".1*" />
                        <ColumnDefinition Width=".6*" />
                        <ColumnDefinition Width=".25*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="4"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontWeight="Medium"
                        Text="Trigger Options" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="Rolling Trigger" />
                    <CheckBox
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Command="{Binding StartDataLoop}"
                        Content="Rolling"
                        IsChecked="{Binding BoardHandle.RollingEnabled, Mode=TwoWay}"
                        Style="{StaticResource ToggleSwitchStyle}" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="Edge: Rising/Falling" />
                    <CheckBox
                        Grid.Row="2"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        IsChecked="{Binding BoardHandle.TriggerEdgeType}"
                        Style="{StaticResource ToggleSwitchStyle}" />
                    <Separator
                        Grid.Row="1"
                        Grid.RowSpan="2"
                        Grid.Column="2"
                        Width="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Stretch"
                        Background="Gray" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="3"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="Trigger Value" />
                    <CheckBox
                        Grid.Row="1"
                        Grid.Column="4"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Command="{Binding ChannelTrigger}"
                        Style="{StaticResource ToggleSwitchStyle}" />
                    <Slider
                        Grid.Row="2"
                        Grid.Column="3"
                        Grid.ColumnSpan="2"
                        Margin="3,0,10,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        IsEnabled="{Binding Uart.ConnectionStatus}"
                        Maximum="255"
                        Minimum="0"
                        Orientation="Horizontal"
                        Value="{Binding BoardHandle.TriggerThreshold, Mode=TwoWay}" />
                </Grid>
                <StackPanel Grid.Row="7" />
                <StackPanel
                    Grid.Row="8"
                    Margin="0,0,0,0"
                    VerticalAlignment="Bottom">
                    <Grid Margin="0,10,10,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="10" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width=".3*" />
                            <ColumnDefinition Width=".3*" />
                            <ColumnDefinition Width=".3*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="18"
                            FontWeight="Medium"
                            Text="Device Setup" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="Medium"
                            Text="Connect to Device" />
                        <ToggleButton
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="10,0,10,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Command="{Binding ConnectBoardCommand}"
                            CommandParameter="{Binding IsChecked, RelativeSource={RelativeSource Self}}"
                            Content="{Binding ConnectionButton, Mode=OneWay}"
                            IsChecked="{Binding Uart.ConnectionStatus, Mode=OneWay}" />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="Medium"
                            Text="Select Port" />
                        <ComboBox
                            Grid.Row="2"
                            Grid.Column="1"
                            Height="32"
                            Margin="10,0,10,0"
                            Padding="5,1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontSize="14"
                            FontWeight="Medium"
                            ItemsSource="{Binding AvailableCOMDevices, Mode=OneWay}"
                            SelectedIndex="{Binding SelectedCOMDevice, Mode=TwoWay}" />
                        <ProgressBar
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="15,0,15,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            IsIndeterminate="True"
                            Visibility="{Binding ProgressVisibility}" />
                        <Button
                            Grid.Row="2"
                            Grid.Column="2"
                            Margin="10,0,10,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Command="{Binding UpdateSelectedCOMPort}"
                            Content="Refresh"
                            FontSize="14"
                            Style="{StaticResource AccentButtonStyle}" />
                        <StackPanel
                            Grid.Row="3"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Margin="0,0,10,0"
                            HorizontalAlignment="right"
                            VerticalAlignment="Center"
                            Orientation="Horizontal"
                            Visibility="Hidden">
                            <TextBlock
                                Height="25"
                                Margin="0,0,0,5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="16"
                                FontWeight="Medium">
                                Firmware Version
                            </TextBlock>
                            <TextBlock
                                Name="VersionLabel"
                                Height="25"
                                Margin="5,0,5,5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="16"
                                FontWeight="Medium"
                                Text="{Binding BoardHandle.BoardFirmware, Mode=OneWay}" />

                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid
            Grid.Row="2"
            Grid.RowSpan="2"
            Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Column="0"
                Background="LightBlue"
                Orientation="Horizontal">
                <TextBlock
                    Margin="10,0,0,3"
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="Medium"
                    Text="Status" />
            </StackPanel>
            <StackPanel
                Grid.Column="1"
                Background="CadetBlue"
                Orientation="Horizontal">
                <TextBlock
                    Margin="5,0,0,3"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Text="Streaming data FPS: " />
                <TextBlock
                    Margin="5,0,0,3"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Text="{Binding UpdateRate, Mode=OneWay, StringFormat=FPS: {0:F2}}" />

            </StackPanel>
            <StackPanel
                Grid.Column="2"
                Background="LightBlue"
                Orientation="Horizontal">
                <TextBlock
                    Margin="5,0,0,3"
                    VerticalAlignment="Center"
                    FontSize="16">
                    <TextBlock Text="SR: " />
                    <TextBlock Text="{Binding BoardHandle.BoardUniqueId, Mode=OneWay}" />
                </TextBlock>
            </StackPanel>

        </Grid>
    </Grid>
</Window>
